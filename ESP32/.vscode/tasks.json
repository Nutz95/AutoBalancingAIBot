{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Agent: Planner (dry-run)",
			"type": "shell",
			"command": "python",
			"args": [
				"tools/agents/run_agent.py",
				"--config",
				".github/agents/Plan.agent.md",
				"--out",
				"artifacts/plan_out.json"
			],
			"problemMatcher": []
		},
		{
			"label": "Agent: Coder (dry-run)",
			"type": "shell",
			"command": "python",
			"args": [
				"tools/agents/run_agent.py",
				"--config",
				".github/agents/Coder.agent.md",
				"--in",
				"artifacts/plan_out.json",
				"--out",
				"artifacts/coder_out.json"
			],
			"problemMatcher": []
		},
		{
			"label": "Agent: Verifier (dry-run)",
			"type": "shell",
			"command": "python",
			"args": [
				"tools/agents/run_agent.py",
				"--config",
				".github/agents/Verifier.agent.md",
				"--in",
				"artifacts/coder_out.json",
				"--out",
				"artifacts/verifier_report.json"
			],
			"problemMatcher": []
		},
		{
			"label": "ESP32: Build",
			"type": "shell",
			"command": "pio",
			"args": [
				"run"
			],
			"options": {
				"cwd": "${workspaceFolder}/ESP32"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"clear": false
			}
		},
		{
			"label": "ESP32: Upload",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"upload"
			],
			"options": {
				"cwd": "${workspaceFolder}/ESP32"
			},
			"presentation": {
				"panel": "new",
				"reveal": "always",
				"focus": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "ESP32: Serial Monitor",
			"type": "shell",
			"command": "pio",
			"args": [
				"device",
				"monitor",
				"--baud",
				"921600"
			],
			"options": {
				"cwd": "${workspaceFolder}/ESP32"
			},
			"isBackground": true,
			"presentation": {
				"panel": "new",
				"reveal": "always",
				"focus": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "pio run build",
			"type": "shell",
			"command": "pio run"
		},
		{
			"label": "pio run build fix",
			"type": "shell",
			"command": "pio run"
		},
		{
			"label": "check compile warnings",
			"type": "shell",
			"command": "pio run"
		},
		{
			"label": "pio run build fix (Optimized Motor Driver)",
			"type": "shell",
			"command": "pio run"
		},
		{
			"label": "pio run build fix (Telemetry config + Sync fix)",
			"type": "shell",
			"command": "pio run"
		},
		{
			"label": "pio run build fix (Sign and Tuning Reset)",
			"type": "shell",
			"command": "pio run"
		},
		{
			"label": "Rebuild with Reverted Settings and Clean Config",
			"type": "shell",
			"command": "pio run"
		}
	]
}